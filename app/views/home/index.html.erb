<h1>Listing Properties</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @properties.each do |property| %>
    <tr>
      <td><%= property.title %></td>
      <td><%= property.description %></td>
      <td><%= link_to 'Show', property_path(property) %></td>
    </tr>
  <% end %>
</table>